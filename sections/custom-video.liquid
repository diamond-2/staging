{%- assign vid = section.settings.vid_url -%}
{%- if vid !=blank -%}
<div class="custom-video-section-wrapper">
    <div class="custom-video-holder">
        <iframe width="100%" height="315" class="lazyload" data-src="https://www.youtube.com/embed/{{ vid.id }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>   
</div>
{%- endif -%}
{% schema %}
{
  "name": "Custom Video",
  "settings": [
    {
      "type": "video_url",
      "id": "vid_url",
      "accept": [
        "youtube"
      ],
      "label": "YouTube video Url"
    }
  ]  
}
{% endschema %} 