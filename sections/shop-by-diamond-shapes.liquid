    <div class="dia-container">
        <div class="diamond-shape-sec-header">
            {% if section.settings.heading !=blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
            {% if section.settings.description !=blank %}<p>{{ section.settings.description }}</p>{% endif %}
        </div>
        <div class="diamond-shapes-slider">
            {% for item in section.blocks %}
            <div class="diamond-shapes-slide">
                <div class="diamond-shapes-slide-inner">
