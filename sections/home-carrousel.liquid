<style>

    .slick-slide:not(.slick-active){
        opacity: 0.4;
    }

    .carrousel-home-section .slick-slide{

        margin: 15px 10px;

    }

    .carrousel-home-section .slick-slide img{
        margin: auto;
    }

    .carrousel-home-section .slick-active button:before{

        background: #6C1D45;
        color: #6C1D45 !important;
    }

    .carrousel-home-section .slick-dots{
        margin-top: 4%;
    }

    .slick-slide.slick-current.slick-active.slick-center img:hover{

        box-shadow: 0 5px 14px 3px rgb(0 0 0 / 35%);
        -webkit-box-shadow: 0 5px 14px 3px rgb(0 0 0 / 35%);
        transition: all 0.4s;
        -webkit-transition: all 0.4s;
    }

    .carrousel-heading{
        width: 35.214%;
        margin: 7% auto;
        font-family: 'Spectral', serif;
        font-weight: 200;
        color: #6C1D45;
        letter-spacing: normal;
        margin-top: 9%;
        text-align: center;
        max-width: 540px;
        text-transform: uppercase;
    }

    .image-for-desktop img{
        width: 100% !important;
        max-width: 1050px;
        max-height: 780px;
    }

    .carrousel-home-section .slick-dots li button:before{
        /* color: red; */
        font-family: "Font Awesome 5 Free";
        content: "\f1ce";
        display: inline-block;
        padding-right: 3px;
        vertical-align: middle;
        font-weight: 900;
        border: 1px solid #6b1d45;
        border-radius: 50%;
    }

    img.image-for-desktop.slick-slide {
        padding-left: 25px;
    }

    @media screen and (max-width: 767px) {

        .carrousel-home-section .slick-active button:before{
            background: #6C1D44;
            color: #6C1D44 !important;
        }

        .carrousel-home-section .slick-dots li button:before{
            height: 15px;
            width: 15px;
            /* color: #6C1D44 !important; */
        }

        .carrousel-heading {
            width: 80%;
        }

        .slick-initialized .slick-slide .image-for-mobile{
            display: block;
        }
    }

    @media screen and (max-width: 480px) {
        .carrousel-heading{
            font-size: 20px;
        }
    }

    @media screen and (min-width: 2000px){

       .carrousel-home-section .image-for-desktop img {
            width: 100% !important;
            padding-left: 2%;
            padding-right: 2%;
            max-width: 10000px;
            max-height: 10000px;
       }
    }

</style>

<div class="carrousel-home-section">

    <h1 class="carrousel-heading">{{section.settings.caraosel_heading}}</h1>

    <div class="carrousel-implemented-main image-for-desktop">
        {% for block in section.blocks %}
            <div>
                <img src="{{block.settings.gallery_image_desktop | img_url: 'master'}}" class="image-for-desktop">
            </div>
        {% endfor %}
    </div>

</div>

<script>
    $('.carrousel-implemented-main').slick({
  dots: true,
  centerMode: true,
  infinite: true,
  autoplay: true,
  autoplaySpeed: 3000,
  centerPadding: '520px',
  slidesToShow: 1,
  responsive: [
    {
      breakpoint: 1500,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '320px',
        slidesToShow: 1
      }
    },
    {
      breakpoint: 1100,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '220px',
        slidesToShow: 1
      }
    },
    {
      breakpoint: 900,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '120px',
        slidesToShow: 1
      }
    },
    {
      breakpoint: 767,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '40px',
        slidesToShow: 1
      }
    },
    {
      breakpoint: 480,
      settings: {
        arrows: false,
        centerMode: true,
        centerPadding: '10px',
        slidesToShow: 1
      }
    }
  ]
});
</script>



{% schema %}
    {
        "name" : "Jewellery Collection",
        "class": "jewellery-col-layout",
        "settings": [
            {
                "type": "text",
                "id": "caraosel_heading",
                "label": "Heading",
                "default": "HOUSE OF WORLD BEYOND THE DIAMOND"
            }
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "gallery_image_desktop",
                        "label": "Gallery Image For Desktop"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Jewellery Collection"
            }
        ]
    }
    {% endschema %}