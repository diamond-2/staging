<div class="details-container">
    <div class="inner-details-section">

        {% if section.settings.banner != blank %}
            <div class="left-section">
                <img src="{{ section.settings.banner | img_url }}" class="left-banner"/>
            </div>
        {% endif %}

        <div class="right-section">
            <p class="details-heading">{{ section.settings.main_heading }}</p>
            <div class="details-content">{{ section.settings.main_content }}</div>
        </div>
    </div>
</div>


{% schema %}
{
  "name": "Detail Block Content",
  "settings": [
    {
      "id": "banner",
      "type": "image_picker",
      "label": "Banner"
    },
    {
      "id": "main_heading",
      "type": "text",
      "label": "Heading"
    },
    {
      "id": "main_content",
      "type": "html",
      "label": "Content"
    }
  ]
}
{% endschema %}

<style>
.details-container{padding-left:100px;padding-right:100px;}
.inner-details-section{display:flex;padding-top:100px;}
.left-section{float:left;max-width:825px;}
.left-section img{width:825px;max-width:100%;}
.right-section{float:right;max-width:825px;padding-left:70px;}
p.details-heading{margin-top:90px;padding-bottom:90px;margin-bottom:0px;font-family: Spectral;font-style: normal;font-weight: 275;font-size: 45px;line-height: 108%;text-transform: uppercase;color: #6C1D45;}
div.details-content{font-family: Montserrat;font-style: normal;font-weight: 300;font-size: 26px;line-height: 108%;color: #000000;}
</style>