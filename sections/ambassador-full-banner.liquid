  p.inner-heading {padding-bottom: 25px !important;margin-bottom: 0px;font-size: 25px !important;padding-top: 25px;}
  p.inner-subheading {font-size: 18px;max-width: 250px;margin-bottom: 0px;}
  }

  @media screen and (min-width: 768px) and (max-width: 1024px){
  .full-banner{height:800px;}
