<div class="full-banner">
<div class="inner-container">

  <p class="inner-heading">{{ section.settings.banner_heading }}</p>
  <p class="inner-subheading">{{ section.settings.banner_subheading }}</p>

</div>
</div>


{% schema %}
{
  "name": "Full banner Content",
  "settings": [
    {
      "id": "full_banner_desktop",
      "type": "image_picker",
      "label": "Background Banner Desktop"
    },
    {
      "id": "full_banner_mobile",
      "type": "image_picker",
      "label": "Background Banner Mobile"
    },
    {
      "id": "banner_heading",
      "type": "text",
      "label": "Heading over banner"
    },
    {
      "id": "banner_subheading",
      "type": "text",
      "label": "Sub-heading over banner"
    }
  ]
}
{% endschema %}

<style>
  body.layout_ambassador .main-content{padding-top:0px;}
  body.layout_ambassador #shopify-section-header{background:rgba(255, 255, 255, 0.2);}
  body.layout_ambassador .site-header{background:transparent;}
  body.layout_ambassador .site-header__mobile-nav{background:transparent;}
  body.layout_ambassador.has_no_banner .sticky-header{border-bottom:0px;}

  p.inner-heading{font-family: 'Spectral', serif;font-style: normal;font-weight: 275;font-size: 45px;line-height: 108%;display: flex;align-items: center;text-transform: uppercase;color: #FFFFFF;padding-bottom:90px;max-width:445px;width:100%;margin-bottom:0px;}
  p.inner-heading sup{font-size: 25px !important;left: -52px !important;top: 32px !important;}
  p.inner-subheading{font-family: 'Montserrat', sans-serif;;font-style: normal;font-weight: 300;font-size: 26px;line-height: 108%;display: flex;align-items: center;color: #FFFFFF;max-width:420px;margin-bottom:0px;}
  .inner-container{margin-top:432px;margin-left:100px;}

  @media screen and (min-width: 768px){
  .full-banner{ background:url({{ section.settings.full_banner_desktop | img_url: 'master' }});background-size: cover;background-repeat:no-repeat;height: 970px;position: absolute;top: 0;left: 0;right: 0;} 
  body.layout_ambassador .page-container{position:unset;}
  }	

  @media screen and (max-width: 767px){
  .full-banner{background:url({{ section.settings.full_banner_mobile | img_url: 'master' }});background-repeat:no-repeat;height: 250px;background-size: cover;}
