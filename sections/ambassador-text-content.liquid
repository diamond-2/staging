<div class="text-container">
    <div class="inner-text-container">
        <p class="second-heading">{{ section.settings.second_heading }}</p>
        <p class="second-subheading">{{ section.settings.second_subheading }}</p>
    </div>
</div>


{% schema %}
{
  "name": "Text Content Container",
  "settings": [
    {
      "id": "second_heading",
      "type": "text",
      "label": "Heading"
    },
    {
      "id": "second_subheading",
      "type": "text",
      "label": "Sub-heading"
    }
  ]
}
{% endschema %}

<style>
.text-container{margin-top:870px;padding-bottom:100px;}
p.second-heading{display:block;margin:0 auto;max-width:690px;margin-bottom:0px;font-family: Spectral;font-style: normal;font-weight: 275;font-size: 45px;line-height: 108%;text-align: center;text-transform: uppercase;color: #6C1D45;padding-bottom:50px;}
p.second-subheading{max-width:1300px;display:block;margin:0 auto;margin-bottom:0px;font-family: Montserrat;font-style: normal;font-weight: 300;font-size: 26px;line-height: 108%;text-align: center;color: #000000;}

@media screen and (max-width: 767px){
.text-container {margin-top: 50px ;padding-bottom: 50px ;padding-left:10px;padding-right:10px;}
p.second-heading {margin-bottom: 0px;font-size: 25px;padding-bottom: 25px ;}
p.second-subheading {margin: 0 auto;margin-bottom: 0px;font-size: 15px;line-height:150%;}
}
</style>
