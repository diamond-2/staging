p.second-heading{display:block;margin:0 auto;max-width:690px;margin-bottom:0px;font-family: 'Spectral', serif;font-style: normal;font-weight: 200;font-size: 45px;line-height: 108%;text-align: center;text-transform: uppercase;color: #6C1D45;padding-bottom:50px;}
p.second-subheading{max-width:1300px;display:block;margin:0 auto;margin-bottom:0px;font-family: 'Montserrat', sans-serif;font-style: normal;font-weight: 300;font-size: 26px;line-height: 108%;text-align: center;color: #000000;}

