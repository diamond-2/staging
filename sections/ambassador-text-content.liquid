<div class="text-container">
    <div class="inner-text-container">
        <p class="second-heading">{{ section.settings.second_heading }}</p>
        <p class="second-subheading">{{ section.settings.second_subheading }}</p>
    </div>
</div>


{% schema %}
{
  "name": "Text Content Container",
  "settings": [
    {
      "id": "second_heading",
      "type": "text",
      "label": "Heading"
    },
    {
      "id": "second_subheading",
      "type": "text",
      "label": "Sub-heading"
    }
  ]
}
{% endschema %}

<style>
