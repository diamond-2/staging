<div class="benefits-container">
    <div class="inner-benefits-section">
        <div class="left">
          <p class="benefits-heading">{{ section.settings.main_heading }}</p>
          <div class="benefits-subheading">{{ section.settings.main_subheading }}</div>
          <div class="benefits-content">{{ section.settings.main_content }}</div>
        </div>

    {% if section.settings.banner != blank %}
        <div class="right">
          <img src="{{ section.settings.banner | img_url }}" class="right-banner"/>
        </div>
    {% endif %}

    </div>
</div>


{% schema %}
{
  "name": "Ambassador Benefits",
  "settings": [
    {
      "id": "main_heading",
      "type": "text",
      "label": "Heading"
    },
    {
      "id": "main_subheading",
      "type": "html",
      "label": "Sub Heading"
    },
    {
      "id": "main_content",
      "type": "html",
      "label": "Content"
    },
    {
      "id": "banner",
      "type": "image_picker",
      "label": "Banner"
    }
  ]
}
{% endschema %}

