                        <a class="pdp-white-btn" href="#">SHOP AT HOME WITH OUR AMBASSADOR</a>
                    </div>
                    <div class="product-details-btn-item">
                        <a class="pdp-white-btn" href="#">VIRTUAL TRY ON</a>
                    </div>
                    <div class="product-details-btn-item">
                        <a class="pdp-white-btn" href="#">TRY AT HOME</a>
                    </div>
                </div>

                <div class="pdp-connect-section">
                    <div class="connect-with-phone">
                        <div class="left_col">
                            <span><img src="{{ 'phone.png' | asset_url  }}" alt="phone"></span>
                            <span class="text">to order by  phone</span>
                        </div>
                        <div class="right_col">
                            <a href="tel:+8002278400">1-800-227-8400</a>
                        </div>
                    </div>
                    <div class="pdp-warranty-sec">
                        <div class="pdp-warranty-item _returns">
                            <span><img src="{{ 'returns.png' | asset_url  }}" alt="returns"></span>
