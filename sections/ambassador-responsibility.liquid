<div class="responsibility-content">
    <div class="responsibility-inner-box">
        <p class="small-heading-new">{{ section.settings.heading }}</p>
        <p class="small-content">{{ section.settings.sub-heading }}</p>

            <div class="inner-content">
               {% for block in section.blocks %} 
                <div class="inner-test">
                    <p class="inner-heading-res">{{ block.settings.inner-heading }}</p>
                    <div class="inner-texts">{{ block.settings.inner-content }}</div>
                </div>
                {% endfor %}
            </div>
    </div>
</div>

{% schema %}
  {
    "name": "Responsibilities Text",
    "max_blocks": 6,
    "settings": [
      {
        "id": "heading",
        "type": "text",
        "label": "Section Heading"
      },
      {
        "id": "sub-heading",
        "type": "text",
        "label": "Section Subheading"
      }
    ],
    "blocks": [
      {
        "type": "addBlock",
        "name": "Blocks",
        "limit": 6,
        "settings": [
          {
            "id": "inner-heading",
            "type": "text",
            "label": "Inner Heading"
          },
          {
            "id": "inner-content",
            "type": "html",
            "label": "Inner Content"
          }
        ]
      }
    ]
  }
{% endschema %}

