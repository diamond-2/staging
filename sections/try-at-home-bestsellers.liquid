.left-container {margin-right: 0px;}
.pincode-input {background-size: 15px;padding: 8px 25px 8px 50px;background-position: 10px;width: 300px;height: 50px;font-size: 21px;margin-bottom: 10px;display: block;margin: 0 auto 10px;}
.pincode-submittion {max-width: 300px;height: 40px;font-size: 18px;width: 100%;display: block;margin: 0 auto;}
