<div class="description-content">
    <div class="description-inner-box">
        {% for block in section.blocks %} 
            <div class="inner-section">
                <img class="small-icons" src="{{ block.settings.small-img | img_url:"master" }}"/>
                <p class="small-heading">{{ block.settings.text-1 }}</p>
                <p class="small-content-two">{{ block.settings.text-2 }}</p>
                <a class="link-text" href="{{ block.settings.content-link }}">{{ block.settings.link-text }}</a>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
  {
    "name": "Description Content",
    "max_blocks": 3,
	
    "blocks": [
      {
        "type": "addBlock",
        "name": "Blocks",
        "limit": 3,
        "settings": [
          {
            "id": "small-img",
            "type": "image_picker",
            "label": "Icons"
          },
          {
            "id": "text-1",
            "type": "text",
            "label": "Heading Text"
          },
          {
            "id": "text-2",
            "type": "text",
            "label": "Subheading Content"
          },
          {
            "id": "link-text",
            "type": "text",
            "label": "Text for link"
          },
          {
            "id": "content-link",
            "type": "url",
            "label": "URL"
          }
        ]
      }
    ]
  }
{% endschema %}

