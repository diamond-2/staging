.inner-section{width:30%;}
p.small-heading{padding-bottom:50px;margin-bottom:0px;font-family: 'Spectral', serif;font-style: normal;font-weight: 200;font-size: 38px;line-height: 108%;text-align: center;text-transform: uppercase;color: #6C1D45;}
p.small-content-two{line-height: 1.8;;padding-bottom:50px;margin-bottom:0px;font-family: 'Montserrat', sans-serif;font-style: normal;font-weight: 300;font-size: 26px;line-height: 108%;text-align: center;color: #000000;}
