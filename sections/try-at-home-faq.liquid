
<div class="accordion-wrapper try-at-home-faq">
    <div class="ac-grid">
        {% for item in section.blocks %}
        {%- if item.settings.question != blank or item.settings.answer != blank -%}
        <div class="ac-item">
            {%- if item.settings.question != blank -%}
            <div class="ac-heading">
                <a href="javascript:void(0);">{{ item.settings.question | replace: '®', '<sup>®</sup>' }}<span class="icon_s"><svg width="12" height="6" viewBox="0 0 12 6" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M11.9999 0.995538C12.0004 1.12361 11.9721 1.25016 11.9172 1.36588C11.8624 1.48159 11.7823 1.58354 11.6828 1.66423L6.54046 5.80498C6.3871 5.93107 6.19474 6 5.99622 6C5.79771 6 5.60534 5.93107 5.45199 5.80498L0.309616 1.51849C0.134589 1.37297 0.0245216 1.16387 0.00362666 0.937176C-0.0172683 0.710485 0.052721 0.484775 0.198198 0.3097C0.343674 0.134626 0.552721 0.0245285 0.779351 0.00362778C1.00598 -0.0172729 1.23163 0.0527353 1.40665 0.198252L6.00051 4.03037L10.5944 0.326846C10.7202 0.222013 10.8734 0.155421 11.0358 0.134949C11.1983 0.114478 11.3632 0.140983 11.5111 0.211329C11.6589 0.281675 11.7835 0.392918 11.8702 0.531895C11.9568 0.670871 12.0019 0.831765 11.9999 0.995538Z" fill="black"/></svg></span></a>
            </div>
            {%- endif -%}
            {%- if item.settings.answer != blank -%}
            <div class="rte ac-body">
                <div class="ac-body-inner">{{ item.settings.answer }}</div>
            </div>
            {%- endif -%}
        </div>
        {%- endif -%}
        {% endfor %}
    </div>
</div>

<style>
.accordion-wrapper.try-at-home-faq{margin-top:100px;padding-left:130px;padding-right:70px;}
.ac-item .ac-heading a{width:100%;}
.ac-item .ac-heading a .icon_s{right:0%;}
.ac-item{padding-bottom: 30px;padding-top: 30px;border-bottom: 1px dashed rgba(0, 0, 0, 0.1);margin-bottom:0px;}
.ac-item:not(:last-child) {margin-bottom: 0px;}
.ac-item .ac-body .ac-body-inner, .ac-item .ac-heading a{font-size:24px;}

@media screen and (max-width: 768px){
.accordion-wrapper.try-at-home-faq {margin-top: 50px;padding-left: 20px;padding-right: 20px;}
.ac-item {padding-bottom: 15px;padding-top: 15px;}
.ac-item .ac-body .ac-body-inner, .ac-item .ac-heading a {font-size: 12px;}
}
</style>

{% schema %}
{
    "name": "FAQ",
    "settings": [
    ],
    "blocks": [
        {
            "type": "text",
            "name": "Accordion",
            "settings": [
                {
                    "type": "text",
                    "label": "Question",
                    "id": "question",
                    "default": "heading"
                },
                {
                    "type": "html",
                    "label": "Answer",
                    "id": "answer",
                    "default": "Answer"
                }
            ]
        }
    ]
}
{% endschema %} 
