{%- if section.settings.heading != blank or section.settings.content != blank -%}
<div class="beyond-the-diamond-section global_section_bg">
	<div class="dia-container">
		<div class="dia-small-container">
			<div class="beyond-the-diamond-content-holder text-center">
				{%- if section.settings.heading != blank -%}<h2>{{ section.settings.heading | replace: '®', '<sup>®</sup>' }}</h2>{%- endif -%}
				{%- if section.settings.content != blank -%}<div class="beyond-the-diamond-des">{{ section.settings.content | replace: '®', '<sup>®</sup>' }}</div>{%- endif -%}
			</div>
		</div>
	</div>
</div> 
{%- endif -%}


{% schema %}
  {
    "name": "Beyond The Diamond",
    "settings": [
    	{
    		"type": "text",
    		"label": "Heading",
    		"id": "heading",
    		"default": "THE WORLD BEYOND THE DIAMOND"
    	},
    	{
    		"type": "richtext",
    		"label": "Content",
    		"id": "content",
    		"default": "<p>Our revolutionary lab-grown Diamond2  gem is an innovative breakthrough that seeks to disrupt the tradition-bound world of fine jewelry dominated by the diamond. <br><br>Our unique, never before seen gemstone is designed to seduce today’s sophisticated, forward-looking clientele, thanks to its rarefied beauty and remarkable brilliance that has no equal. Discover the beauty of Diamond2  . Discover a world beyond the diamond. </p>"
    	}
    ]
  }
{% endschema %}