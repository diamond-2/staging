                    {%- capture tableContent_stone_avg_color -%}col{{i}}_tab{{ j }}_stone_avg_color{%- endcapture -%}
                    {%- capture tableContent_stone_type -%}col{{i}}_tab{{ j }}_stone_type{%- endcapture -%}
                    {%- capture tableContent_cert_cut -%}col{{i}}_tab{{ j }}_cert_cut{%- endcapture -%}
                    {%- capture tableContent_stone_coating -%}col{{i}}_tab{{ j }}_stone_coating{%- endcapture -%}
                    {%- capture tableContent_clarity_granding -%}col{{i}}_tab{{ j }}_clarity_granding{%- endcapture -%}
                    {%- capture tableContent_cert_carats -%}col{{i}}_tab{{ j }}_cert_carats{%- endcapture -%}
                    {%- capture tableContent_cert_fluorescence -%}col{{i}}_tab{{ j }}_cert_fluorescence{%- endcapture -%}
